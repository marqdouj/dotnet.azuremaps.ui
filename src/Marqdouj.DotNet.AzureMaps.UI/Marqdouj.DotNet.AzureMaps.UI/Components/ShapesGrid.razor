@using Marqdouj.DotNet.AzureMaps.Map.Events
<FluentDataGrid Items="@items"
                Style="@Style"
                Class="@Class"
                MultiLine="@MultiLine"
                ResizableColumns="true"
                ResizeType="DataGridResizeType.Discrete"
                GridTemplateColumns="@GridTemplateColumns"
                GenerateHeader="GenerateHeaderOption.Sticky">

    <ChildContent>
        <PropertyColumn Property="@(p => p.Id)" Align="Align.Start" />
        <PropertyColumn Property="@(p => p.Type)" Align="Align.Start" />
        <PropertyColumn Property="@(p => p.Properties)" Align="Align.Start" />
    </ChildContent>
    <EmptyContent/>
</FluentDataGrid>

@code {
    private IQueryable<MapEventShape>? items => Items?.AsQueryable();

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public string GridTemplateColumns { get; set; } = "auto auto auto";

    [Parameter, EditorRequired]
    public IEnumerable<MapEventShape> Items { get; set; }

    [Parameter]
    public bool MultiLine { get; set; } = true;

    [Parameter]
    public string? Style { get; set; }
}